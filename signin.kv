<SigninWindow>:
    id: main_win
    orientation: "vertical"  ## 
    spacing: 10 ## space between widgets
    space_x: self.size[0]/3
    
    # By default, the orientation is horizontal
    BoxLayout:
        size_hint_y: None
        height: 50
        Label: 
            text: "Access Control"
            bold: True
            # By default 0-1 range. 
            # x means x
            size_hint_x: 0.9
        Label: 
            text: "x"
            size_hint_x: 0.1
    BoxLayout:
        orientation: "vertical"
        ## If one value: for all sides
        ## two values: x for left right, y for top bottom
        ## four values: top, right, bottom and left
        padding: main_win.space_x, 10
        #spacing: 20 
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 80
            TextInput:
                hint_text: "Username"
                multiline: False
            TextInput:
                hint_text: "Password"
                multiline: False
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Sign In"
            size_hint_y:None
            height: 40
        Label:
            id: sp2
            #size_hint_y: None
            #height: 40
